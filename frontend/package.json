{
  "name": "document-assistant-frontend",
  "version": "1.0.0",
  "description": "Document Assistant - AI-powered Document QA Desktop App",
  "main": "../electron/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron ../electron/main.js",
    "electron:dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron ../electron/main.js\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "axios": "^1.6.2",
    "react-markdown": "^9.0.1",
    "react-dropzone": "^14.2.3",
    "lucide-react": "^0.294.0"
  },
  "devDependencies": {
    "react-scripts": "5.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.documentassistant.app",
    "productName": "Document Assistant",
    "files": [
      "build/**/*",
      "../electron/**/*",
      "../backend/**/*",
      "!../backend/.venv/**/*",
      "!../backend/__pycache__/**/*",
      "!../backend/cache/**/*",
      "!../backend/data/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "deb",
      "icon": "assets/icon.png"
    }
  }
}
