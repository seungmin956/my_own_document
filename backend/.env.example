APP_ENV=development

# Model Configuration
EMBEDDING_MODEL=bge-m3          # 또는 nomic-embed-text (더 빠름)
LLM_MODEL=llama3.2:3b          # 또는 llama3.2:1b (더 빠름)
RERANK_MODEL=auto
LLM_TEMPERATURE=0.1            # 0.0 = 결정적, 0.1 = 약간 창의적 (1b 모델은 0.0 권장)

# OpenAI (optional)
OPENAI_API_KEY=your-openai-api-key-here

# LangSmith (optional)
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=document-assistant-rag

# Qdrant
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_HOST=localhost
QDRANT_PORT=6333

# BM25 Hybrid Search
BM25_ENABLED=true
BM25_VECTOR_WEIGHT=0.5
BM25_BM25_WEIGHT=0.5
